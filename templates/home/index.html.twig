{% extends 'base.html.twig' %}

{% block title %}Accueil
{% endblock %}

{% block body %}

	<div class="d-flex">
		<div class="body-home d-flex flex-column justify-content-center">

			<div class="title-home container text-light">
				<h1 class="display-1 ms-5">BodyWolf</h1>
				<h2 class="fs-4 fw-lighter ms-5">La solution de gestion de salle de sport pour les franchisés</h2>
				<p class="fs-4 fw-lighter ms-5">Les options
					<span class="text-decoration-underline text-light">
						Bodywolf</span>
					à bout de click !</p>

				{% if app.user %}
				<div class="fs-4 fw-light m-5 ">
							Vous êtes connecté
							<span class="">{{app.user.getFirstName}} {{ app.user.getLastName}}</span>
						</div> 
				{% else %}	
				<div class="d-flex m-5">
				<a class="btn btn-lg btn-outline-light me-5 shadow" href="{{ path("app_login")}}">Se connecter</a>
				<a class="btn btn-lg btn-secondary text-light shadow" href="{{ path('app_contact_new') }}">Nous contacter</a>
				</div>
				{% endif %}	

			</div>
		</div>

		<div class="img-home d-none d-lg-block"></div>
	</div>

{% endblock %}
