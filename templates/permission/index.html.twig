{% extends 'base.html.twig' %}

{% block title %}Permission index{% endblock %}

{% block body %}
	{% if is_granted('ROLE_TEAM') %}
		<div class="d-flex justify-content-center align-items-center">

			<div class="form-create container-xl bg-light mt-5 pe-md-5 ps-md-5 pt-3 pb-4 m-1 shadow-sm rounded">
				<div class="d-flex justify-content-between align-items-center ">
					<h1 class="">Les options
						<span class="text-primary display-5">BodyWolf</span>
					</h1>

					<div class="d-flex align-items-center justify-content-end">
						<a class="btn btn-primary text-light me-5" href="{{ path('app_permission_new') }}">Ajouter</a>

					</div>
				</div>

				<hr class="my-4">

				<table class="table">
					<thead>
						<tr class="bg-primary text-light">
							<th>Statut</th>
							<th>Titre</th>
							<th>Actions</th>
						</tr>
					</thead>
					<tbody class="bg-warning">
        {% for permission in permissions %}
            <tr>
                <td>
				{{ permission.isActive ? '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-check-lg text-success" viewBox="0 0 16 16">
  				<path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425a.247.247 0 0 1 .02-.022Z"/>
				</svg>' : '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-x-lg text-danger" viewBox="0 0 16 16">
  				<path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z"/>
				</svg>' }}
				{# {% set activer = '' %}{% set deactiver = '' %}style="{{ partner.isIsActive ? activer : deactiver }}" #}
				</td>
                <td>{{ permission.titre }}</td>
                <td>
                    <a href="{{ path('app_permission_show', {'id': permission.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye-fill" viewbox="0 0 16 16">
									<path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z"/>
									<path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z"/>
									</svg></a>
                    <a href="{{ path('app_permission_edit', {'id': permission.id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-pencil-fill" viewbox="0 0 16 16">
									<path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z"/>
									</svg></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
</div>
{% endif %}
{% endblock %}
